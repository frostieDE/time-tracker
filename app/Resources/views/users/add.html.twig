{% extends "main.html.twig" %}

{% block title %}Add user{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li>Admin area</li>
        <li><a href="{{ path('show_users') }}">User management</a></li>
        <li class="active">Add user</li>
    </ol>
{% endblock %}

{% block content %}
    <h3><i class="fa fa-user"></i> Add user</h3>

    {{ form_start(form) }}
    {{ form_errors(form) }}
    {{ form_widget(form) }}

    <div class="form-buttons">
        <button class="btn btn-primary">
            <i class="fa fa-plus"></i> Create
        </button>
    </div>
    {{ form_end(form) }}
{% endblock %}