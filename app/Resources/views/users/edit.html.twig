{% extends "main.html.twig" %}

{% block title %}Edit user{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li>Admin area</li>
        <li><a href="{{ path('show_users') }}">User management</a></li>
        <li class="active">Edit user</li>
    </ol>
{% endblock %}

{% block content %}
    <h3><i class="fa fa-user"></i> Edit user</h3>

    <div class="row">
        <div class="col-md-6">
            {{ form_start(formProfile) }}
            {{ form_errors(formProfile) }}
            {{ form_widget(formProfile) }}

            <div class="form-buttons">
                <button class="btn btn-primary">
                    <i class="fa fa-save"></i> Save profile
                </button>
            </div>
            {{ form_end(formProfile) }}
        </div>

        <div class="col-md-6">
            {{ form_start(formPassword) }}
            {{ form_errors(formPassword) }}
            {{ form_widget(formPassword) }}

            <div class="form-buttons">
                <button class="btn btn-primary">
                    <i class="fa fa-save"></i> Change password
                </button>
            </div>
            {{ form_end(formPassword) }}
        </div>
    </div>


{% endblock %}