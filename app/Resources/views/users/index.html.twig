{% extends "main.html.twig" %}

{% block title %}{{ 'users.header'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li>{{ 'admin.header'|trans }}</li>
        <li class="active">{{ 'users.header'|trans }}</li>
    </ol>
{% endblock %}

{% block content %}
    <h3><i class="fa fa-users"></i> {{ 'users.header'|trans }}</h3>

    <a class="btn btn-primary" href="{{ path('add_user') }}"><i class="fa fa-plus"></i> {{ 'users.add.header'|trans }}</a>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>{{ 'form.username'|trans }}</th>
                <th>{{ 'form.email'|trans }}</th>
                <th>{{ 'other.actions.header'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('edit_user', { username: user.username }) }}" class="btn btn-primary btn-sm"><i class="fa fa-edit"></i> {{ 'other.actions.edit'|trans }}</a>
                    {% if user.id > 1 and user.id != app.user.id %}
                    <a href="{{ path('delete_user', { username: user.username }) }}" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> {{ 'other.actions.delete'|trans }}</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}