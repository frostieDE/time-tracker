{% extends "main.html.twig" %}

{% block title %}Users{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li>Admin area</li>
        <li class="active">User management</li>
    </ol>
{% endblock %}

{% block content %}
    <h3><i class="fa fa-users"></i> Users</h3>

    <a class="btn btn-primary" href="{{ path('add_user') }}"><i class="fa fa-plus"></i> add user</a>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Username</th>
                <th>E-Mail</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('edit_user', { username: user.username }) }}" class="btn btn-primary btn-sm"><i class="fa fa-edit"></i> edit</a>
                    {% if user.id > 1 and user.id != app.user.id %}
                    <a href="{{ path('delete_user', { username: user.username }) }}" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> delete</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}