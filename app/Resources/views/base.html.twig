<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %} | Time Tracker</title>
        {% block stylesheets %}
            {% stylesheets filter="scssphp" output="css/app.css"
            "%kernel.root_dir%/Resources/assets/scss/bootstrap.scss"
            "%kernel.root_dir%/Resources/assets/scss/font-awesome.scss"
            "%kernel.root_dir%/Resources/assets/css/*.css"
            "%kernel.root_dir%/Resources/assets/scss/main.scss"
            %}
            <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
        {% block javascripts %}
            {% javascripts output="js/app.js"
            "%kernel.root_dir%/Resources/assets/js/jquery-2.1.4.min.js"
            "%kernel.root_dir%/Resources/assets/js/bootstrap.min.js"
            "%kernel.root_dir%/Resources/assets/js/Chart.Core.js"
            "%kernel.root_dir%/Resources/assets/js/Chart.Line.js"
            "%kernel.root_dir%/Resources/assets/js/Chart.Doughnut.js"%}
            <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
