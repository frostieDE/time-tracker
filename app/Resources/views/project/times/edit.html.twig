{% extends "main.html.twig" %}

{% block title %}Edit time{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="{{ path('dashboard') }}">Dashboard</a></li>
        <li><a href="{{ path('show_project', { slug: project.slug }) }}">{{ project.name }}</a></li>
        <li><a href="{{ path('show_times', { slug: project.slug }) }}">All times</a></li>
        <li class="active">Edit time</li>
    </ol>
{% endblock %}

{% block content %}
    <h3><i class="fa fa-clock-o"></i> Edit time</h3>

    {{ form_start(form) }}
    {{ form_errors(form) }}
    {{ form_widget(form) }}

    <div class="form-buttons">
        <button class="btn btn-primary">
            <i class="fa fa-save"></i> Save
        </button>
    </div>
    {{ form_end(form) }}
{% endblock %}