{% extends "main.html.twig" %}

{% block title %}Delete project{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="{{ path('dashboard') }}">{{ 'dashboard.index'|trans }}</a></li>
        <li><a href="{{ path('show_project', { slug: project.slug }) }}">{{ project.name }}</a></li>
        <li class="active">{{ 'project.delete.header'|trans }}</li>
    </ol>
{% endblock %}

{% block content %}
    <h3><i class="fa fa-trash-o"></i> {{ 'project.delete.header'|trans }}</h3>

    <div class="alert alert-danger">
        <strong>{{ 'other.alert'|trans }}: </strong> {{ 'project.delete.info'|trans }}
    </div>

    {{ form_start(form) }}
    {{ form_errors(form) }}
    {{ form_widget(form) }}

    <div class="form-buttons">
        <button class="btn btn-danger">
            <i class="fa fa-trash-o"></i> {{ 'project.delete.submit'|trans }}
        </button>
    </div>
    {{ form_end(form) }}
{% endblock %}